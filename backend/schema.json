{
  "_id": "",
  "type": "standard",
  "name": "Nil N-S",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "object",
      "properties": {
        "_id": { "type": "string", "format": "uuid" },
        "name": { "type": "string", "minLength": 1 },
        "address": { "type": "string" },
        "twitter_link": { "type": ["string", "null"], "format": "uri" },
        "twitter_verified": { "type": "boolean", "default": false },
        "gmail": { "type": ["string", "null"], "format": "email" }
      },
      "required": ["_id", "name", "address"],
      "additionalProperties": false
    }
  }
}
